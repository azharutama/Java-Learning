package File;

import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.Scanner;
import java.io.FileOutputStream;
import java.io.EOFException;
import java.io.FileInputStream; // Added import for ObjectInputStream

public class FileMhs {

    void SaveToFile() {
        int Nim = 0 ;
        String Nama = null;
        double IPK = 0;
        Mahasiswa R = new Mahasiswa(Nim, Nama, IPK);

        System.out.println("===== SaveToFile =====");
        ObjectOutputStream out = null;
        try {
            out = new ObjectOutputStream(new FileOutputStream("C:\\DATAKU\\Nasabah.dat"+ ""));

            Scanner sc = new Scanner(System.in);
            System.out.print("Masukan Nim: ");
            Nim = sc.nextInt();
            while (Nim != 999) {
                System.out.print("Masukan Nama: ");
                Nama = sc.next();
                System.out.print("Masukan IPK: ");
                IPK = sc.nextDouble();
                out.writeObject(R);
                System.out.print("Masukan Nim: ");
                Nim = sc.nextInt();
                R = new Mahasiswa(Nim, Nama, IPK);
            }
            out.close();

        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    void BacaFile() {
        System.out.println("===== BacaFile =====");
        ObjectInputStream in = null;
        int total = 0;
        Mahasiswa R;
        try {
            in = new ObjectInputStream(new FileInputStream("C:\\DATAKU\\Nasabah.dat" + ""));
            Object curR = in.readObject();
            while (curR != null) { // Termination condition
                R = (Mahasiswa) curR;
                System.out.println("Nim: " + R.getNim());
                System.out.println("Nama: " + R.getNama());
                System.out.println("IPK: " + R.getIPK());
                total++;
                curR = in.readObject();
            }
            in.close();
        } catch (IOException | ClassNotFoundException e) {
            // Handle exceptions appropriately
            e.printStackTrace();
        }
    }

    public static void main(String[] args) {
        FileMhs F = new FileMhs();
        F.SaveToFile();
        F.BacaFile();
    }
}