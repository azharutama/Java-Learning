package TUGAS_BESAR;

import java.util.Scanner;

public class ATM {


void menu() {
	System.out.println("\n===== ATM Menu =====");
	Scanner sc = new Scanner(System.in);
     System.out.println("1. Check Balance");
     System.out.println("2. Deposit Money");
     System.out.println("3. Withdraw Money");
     System.out.println("4. Exit");
     int Pilih = sc.nextInt();
     switch(Pilih) {
     case 0 :System.out.println("1. Check Balance") ;break;
     case 1 :System.out.println("2. Deposit Money");break;
     case 2 :System.out.println("3. Withdraw Money");break;
     case 3 :System.out.println("4. Exit");break;
 
     }
}
public static void main(String[] args) {
    FileNasabah F = new FileNasabah();
    ATM A =new ATM();
   
    F.BacaFile();
    F.LoginNasabah();
    A.menu();
}
}
