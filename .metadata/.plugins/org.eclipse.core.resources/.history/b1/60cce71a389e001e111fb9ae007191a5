package File;

import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.Scanner;
import java.io.FileOutputStream;
import java.io.FileInputStream; // Added import for ObjectInputStream

public class FileMhs {

    void SaveToFile() {
        int Nim = 0 ;
        String Nama = null;
        double IPK = 0;
        Mahasiswa R = new Mahasiswa(Nim, Nama, IPK);

        System.out.println("===== SaveToFile =====");
        ObjectOutputStream out = null;
        try {
            out = new ObjectOutputStream(new FileOutputStream("D:\\DATAKU\\Nasabah.dat"));

            Scanner sc = new Scanner(System.in);
            System.out.print("Masukan Nim: ");
            while (!sc.hasNextInt()) {
                System.out.println("Input Nim harus berupa angka. Coba lagi.");
                System.out.print("Masukan Nim: ");
                sc.next(); // Membaca token yang tidak valid agar tidak terjadi loop tak terbatas
            }
            Nim = sc.nextInt();

            // ... (lanjutkan dengan membaca Nama dan IPK)
        } catch (IOException e) {
            e.printStackTrace();
        }

    }

    void BacaFile() {
        System.out.println("===== BacaFile =====");
        ObjectInputStream in = null;
        int total = 0;
        Mahasiswa R;
        try {
            in = new ObjectInputStream(new FileInputStream("C:\\DATAKU\\Nasabah.dat"));
            Object curR = in.readObject();
            while (curR != null) { // Termination condition
                R = (Mahasiswa) curR;
                System.out.println("Nim: " + R.getNim());
                System.out.println("Nama: " + R.getNama());
                System.out.println("IPK: " + R.getIPK());
                total++;
                curR = in.readObject();
            }
            in.close();
        } catch (IOException | ClassNotFoundException e) {
            // Handle exceptions appropriately
            e.printStackTrace();
        }
    }

    public static void main(String[] args) {
        FileMhs F = new FileMhs();
        F.SaveToFile();
        F.BacaFile();
    }
}
